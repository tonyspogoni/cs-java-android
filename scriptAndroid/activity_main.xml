<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="johnkriegerinc.scripturestuff.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book"
        android:inputType="text"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/verse"
        android:labelFor="HEy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/book_of_scripture"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/steve" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/chapter"
        android:id="@+id/textView2"
        android:layout_below="@+id/book"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginTop="35dp"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/verse"
        android:id="@+id/textView3"
        android:layout_gravity="center"
        android:layout_below="@+id/chap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to Move on"
        android:id="@+id/steve"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="changePage" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verse"
        android:inputType="number"
        android:layout_gravity="center"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/chap" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chap"
        android:inputType="number"
        android:layout_gravity="center"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView3" />

</RelativeLayout>
